---
// Fundations
import Link from "@/components/fundations/elements/Link.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import Heart from "@/components/fundations/icons/Heart.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
import ExternalLink from "@/components/fundations/icons/ExternalLink.astro";

const testimonialsData = [
  {
    title: "IDEA",
    quote:
      "Check out Mi.ke (link) to see what he is up to. An absolute mensch, great domain name investor, and the idea behind csv.domains.",
    author: "Michael Cyger",
    role: "Domain Investor",
    imageUrl: "/thanks/mc.png",
    link: "https://mi.ke"
  },
  {
    title: "DESIGN",
    quote:
      "Check out Lexington Themes for the best Astro.js templates out there. Another great Michael and one of the best designers on X.",
    author: "Michael Andreuzza",
    role: "Lexington Themes",
    imageUrl: "/thanks/ma.jpg",
    link: "https://lexingtonthemes.com/"
  },
  {
    title: "DEVELOPMENT",
    quote:
      "StarterBuild is the best development agency around. I highly recommend them for any project you are considering building. Especially AI.",
    author: "StarterBuild",
    role: "Agency",
    imageUrl: "/thanks/starterbuild logo.ico",
    link: "https://starterbuild.com"
  },
  {
    title: "AFFILIATE",
    quote:
      "If you interact with Job Seekers, PopResume offers 40% commission for life and a 90 day cookie window. I know one of you domainers has a job board.",
    author: "PopResume Affiliate",
    role: "Side Project",
    imageUrl: "/thanks/popresume-logo.webp",
    link: "https://www.popresume.com/"
  },
];
---

<section>
  <Wrapper variant="standard" class="py-12 border-t">
    <div class="md:w-1/2">
      <Text
        class="span"
        variant="textXS"
        data-aos="fade-down"
        data-aos-duration="1000"
        class="flex items-center font-medium uppercase text-base-600 gap-2"
      >
        <Heart size="sm" class="text-yellow-600" />
        Who made it possible
      </Text>
      <Text
        tag="h2"
        variant="displayMD"
        data-aos="fade-up"
        data-aos-duration="1000"
        class="mt-8 font-semibold tracking-tight text-base-800"
      >
        Support this project
      </Text>
      <Text
        tag="p"
        variant="textBase"
        data-aos="fade-up"
        data-aos-duration="1500"
        class="mt-2 text-base text-base-500 md:text-balance"
      >
      The following people have helped make this project a reality. Check out their links and see what they are up to below. 
    </Text>
      
    </div>
    
    <ul
      class="mt-12 overflow-hidden shadow-xl bg-base-50 outline outline-base-200 rounded-xl divide-y divide-base-200"
      role="list"
    >
      {
        testimonialsData.map((testimonial) => (
          <li class="group bg-white hover:bg-base-50 transition-all duration-300">
            <div class="p-6 lg:p-8">
              <div class="grid grid-cols-1 gap-6 items-start lg:gap-12 lg:grid-cols-3">
                <div class="flex items-center gap-4">
                  <div class="flex-shrink-0">
                    <img
                      alt={`Profile picture of ${testimonial.author}`}
                      class="rounded-full size-12 lg:size-16 object-cover border-2 border-base-200"
                      src={testimonial.imageUrl}
                    />
                  </div>
                  <div class="flex-1 min-w-0">
                    <Text
                      tag="p"
                      variant="textBase"
                      class="font-medium text-base-800"
                    >
                      {testimonial.author}
                    </Text>
                    <Text
                      tag="p"
                      variant="textSM"
                      class="text-base-500"
                    >
                      {testimonial.role}
                    </Text>
                    {testimonial.link && (
                      <a
                        href={testimonial.link}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-1 text-sm text-teal-600 hover:text-teal-700 transition-colors"
                      >
                        View site
                        <ExternalLink size="xs" />
                      </a>
                    )}
                  </div>
                </div>
                <div class="lg:col-span-2">
                  <Text
                    tag="h3"
                    variant="textBase"
                    class="font-medium text-base-800"
                  >
                    {testimonial.title}
                  </Text>
                  <Text
                    tag="p"
                    variant="textSM"
                    class="text-base-500"
                  >
                    {testimonial.quote}
                  </Text>
                </div>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
  </Wrapper>
</section>