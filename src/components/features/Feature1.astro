---
// Fundations
import Link from "@/components/fundations/elements/Link.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import Tools from "@/components/fundations/icons/Tools.astro";
import Plus from "@/components/fundations/icons/Plus.astro";
import Cursor from "@/components/fundations/icons/Cursor.astro";
import Camera from "@/components/fundations/icons/Camera.astro";
import Filters from "@/components/fundations/icons/Filters.astro";
import Persist from "@/components/fundations/icons/Persist.astro";
import Stacked from "@/components/fundations/icons/Stacked.astro";
import WaveSquare from "@/components/fundations/icons/WaveSquare.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
import ArrowIteration from "@/components/fundations/icons/ArrowIteration.astro";
const data = [
{
    "icon": "Filters",
    "category": "Bulk upload",
    "text": "Upload your entire domain portfolio from Afternic, Spaceship, and SEDO in one click."
  },
  {
    "icon": "WaveSquare", 
    "category": "Price management",
    "text": "Bulk update prices by dollar amount or percentage, or adjust individual domains manually."
  },
  {
    "icon": "ArrowIteration",
    "category": "Lander settings",
    "text": "Set Buy Now, Make Offer, or Price Request in bulk to control your landing pages."
  },
  {
    "icon": "Plus",
    "category": "Export tools",
    "text": "Download platform-ready CSVs tailored for Afternic, Spaceship, and SEDO."
  },
  {
    "icon": "Cursor",
    "category": "Portfolio CSV editor",
    "text": "Quickly edit individual domains, prices, landers, and notes from one dashboard."
  },
  {
    "icon": "Persist",
    "category": "Easy download",
    "text": "One button to download your entire portfolio, or just the domains you want."
  },
  {
    "icon": "Camera",
    "category": "Error detection",
    "text": "Catch format issues before uploading to avoid rejection, duplicate listings, and other errors."
  },
  {
    "icon": "Stacked",
    "category": "Time-saving",
    "text": "Use CSV.domains to help your listing workflow and save hours managing your domain inventory."
  },
];
---
<section>
  <Wrapper variant="standard" class="py-12 border-t">
    <div class="md:w-1/2">
      <Text
        class="span"
        variant="textXS"
        data-aos="fade-down"
        data-aos-duration="1000"
        class="flex items-center font-medium uppercase text-base-600 gap-2"
      >
        <Tools size="sm" class="text-yellow-600" />
        Built for real domain investors
      </Text>
      <Text
        tag="h2"
        variant="displayMD"
        data-aos="fade-up"
        data-aos-duration="1000"
        class="mt-8 font-semibold tracking-tight text-base-800"
      >
        Secure Uploads and Exports
      </Text>
      <Text
        tag="p"
        variant="textBase"
        data-aos="fade-up"
        data-aos-duration="1500"
        class="mt-2 text-base text-base-500 md:text-balance"
      >
      CSV.domains was hand coded in the USA. Your domains are secure. How do I know? Because your domains never touch a database. The CSV and domains are processed in your browser. Did I mention this is free?
      </Text>
      <div
        data-aos="fade-up"
        data-aos-duration="2000"
        class="flex items-center mt-8 space-x-2"
      >
        <Link
          size="base"
          variant="default"
          href="/forms/sign-up"
          gap="xs"
          class="group"
        >
          Get started
          <ChevronRight
            size="sm"
            class="duration-300 easy-out-in group-hover:translate-x-2"
          />
        </Link>
        <Link
          size="base"
          variant="muted"
          href="/blog/home"
          gap="xs"
          class="group"
        >
          Domain blog
          <ChevronRight
            size="sm"
            class="duration-300 easy-out-in group-hover:translate-x-2"
          />
        </Link>
      </div>
    </div>
    <ul
    class="mt-12 overflow-hidden shadow-xl grid gap-px bg-base-200 outline outline-base-200 rounded-xl sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4"
  >
    {
      data.map((section) => (
        <li class="group flex h-full justify-between flex-col gap-12 lg:gap-24 bg-white px-5 relative pt-6 pb-[30px] transition-all md:min-h-[150px] cursor-pointer hover:bg-base-50">
          <a class="absolute inset-0" href="/forms/sign-up" aria-label={`Learn more about ${section.category}`} />
  
          <div>
            <div class="flex">
              <div class="flex p-2 bg-yellow-400 rounded-lg transition-all duration-300 text-base-800 group-hover:bg-base-800 group-hover:text-white">
                {section.icon === "Filters" && <Filters size="base" />}
                {section.icon === "WaveSquare" && <WaveSquare size="base" />}
                {section.icon === "ArrowIteration" && <ArrowIteration size="base" />}
                {section.icon === "Plus" && <Plus size="base" />}
                {section.icon === "Cursor" && <Cursor size="base" />}
                {section.icon === "Persist" && <Persist size="base" />}
                {section.icon === "Camera" && <Camera size="base" />}
                {section.icon === "Stacked" && <Stacked size="base" />}
              </div>
            </div>
  
            <div class="mt-2">
              <h3 class="font-medium leading-6 text-base-800">{section.category}</h3>
              <p class="text-base-500">{section.text}</p>
            </div>
          </div>
  
          <Text
            tag="p"
            variant="textSM"
            class="flex items-center font-medium gap-2 text-base-800"
          >
            Sign up for free!
            <ChevronRight
              size="sm"
              class="duration-300 ease-out group-hover:translate-x-2"
            />
          </Text>
        </li>
      ))
    }
  </ul>
  
  </Wrapper>
</section>
