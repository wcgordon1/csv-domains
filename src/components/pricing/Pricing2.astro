---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Link from "@/components/fundations/elements/Link.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import Tool from "@/components/fundations/icons/Tool.astro";
import User from "@/components/fundations/icons/User.astro";
import ApiApp from "@/components/fundations/icons/ApiApp.astro";
import CreditCard from "@/components/fundations/icons/CreditCard.astro";
import ChevronRight from "@/components/fundations/icons/ChevronRight.astro";
const pricingData = [
  {
    color: "bg-teal-500",
    category: "Bulk Upload & Updates",
    icon: "ApiApp",
    buttonVariant: "default",
    details: [
      {
        label: "Upload your full portfolio in seconds",
        price: "✔",
        unit: "Afternic, Spaceship, SEDO"
      },
      {
        label: "Bulk update prices by percentage or value",
        price: "✔",
        unit: "Increase, decrease, or set manually"
      },
      {
        label: "Apply landing page types in bulk",
        price: "✔",
        unit: "BIN, Make Offer, or Request Price"
      },
      {
        label: "Adjust individual domains when needed",
        price: "✔",
        unit: "Full control"
      },
      {
        label: "Instant preview before uploading",
        price: "✔",
        unit: "See before you export"
      }
    ]
  },
  {
    color: "bg-yellow-500",
    category: "CSV Tools",
    icon: "Tool",
    buttonVariant: "muted",
    details: [
      {
        label: "Generate platform-specific exports",
        price: "✔",
        unit: "Afternic, Spaceship, SEDO"
      },
      {
        label: "Clean CSV formatting automatically",
        price: "✔",
        unit: "Avoid rejection errors"
      },
      {
        label: "Download full or partial portfolio",
        price: "✔",
        unit: "Filter and export"
      },
      {
        label: "No database — fully browser-based",
        price: "✔",
        unit: "Secure & private"
      },
      {
        label: "Save hours with batch workflows",
        price: "✔",
        unit: "Time-saving"
      }
    ]
  },
  {
    color: "bg-blue-500",
    category: "Investor-First Features",
    icon: "User",
    buttonVariant: "accent",
    details: [
      {
        label: "Error detection before export",
        price: "✔",
        unit: "Prevent bad uploads"
      },
      {
        label: "Quick portfolio editing dashboard",
        price: "✔",
        unit: "Search, filter, and edit"
      },
      {
        label: "Afternic Fast Transfer support",
        price: "✔",
        unit: "Test & push easily"
      },
      {
        label: "Track domains listed or unlisted",
        price: "✔",
        unit: "Stay organized"
      },
      {
        label: "Zero cost",
        price: "✔",
        unit: "Just free baby"
      }
    ]
  }
];

---

<section>
  <Wrapper variant="standard" class="py-12 border-t">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-end">
      <div class="lg:col-span-2">
        <Text
          class="span"
          variant="textXS"
          data-aos="fade-down"
          data-aos-duration="1000"
          class="flex items-center font-medium uppercase text-base-600 gap-2"
        >
          <CreditCard size="sm" class="text-teal-600" />
          So much value
        </Text>
        <Text
          tag="h1"
          variant="displayXL"
          data-aos="fade-up"
          data-aos-duration="1000"
          class="mt-8 font-semibold tracking-tight text-base-800 md:text-balance"
        >
          Features
        </Text>
        <Text
          tag="p"
          variant="textBase"
          data-aos="fade-up"
          data-aos-duration="1500"
          class="mt-2 text-base text-base-500 lg:text-balance max-w-lg"
        >
        CSV.domains gives you everything you need to list your domain portfolio 
        with speed and precision. Upload your domains in bulk, adjust pricing and 
        lander settings, and export clean CSVs ready for Afternic, Spaceship, or SEDO. 
        </Text>
      </div>
      <!-- Edit domains individually, catch formatting issues before they happen, and maintain 
        a clean, organized portfolio without touching a database. Every feature is designed to save you time, reduce friction, and help you list smarter.  -->
      <div class="flex lg:ml-auto">
        <Link
          size="base"
          variant="default"
          href="/auth/sign-up"
          gap="xs"
          class="group w-auto"
        >
          Sign up
          <ChevronRight
            size="sm"
            class="duration-300 easy-out-in group-hover:translate-x-2"
          />
        </Link>
      </div>
    </div>
    <ul role="list" class="grid grid-cols-1 lg:grid-cols-3 gap-2 mt-8">
      {
        pricingData.map((section) => (
          <div class="outline outline-base-200 p-8 rounded-2xl shadow-xl">
            <div class="flex items-center gap-2 ">
              <div class="flex">
                <div
                  class={`${section.color} flex p-2 rounded-lg transition-all duration-300 text-base-800 group-hover:bg-base-800 group-hover:text-white`}
                >
                  {section.icon === "User" && <User size="base" />}
                  {section.icon === "Tool" && <Tool size="base" />}
                  {section.icon === "ApiApp" && <ApiApp size="base" />}
                </div>
              </div>
              <Text
                tag="h3"
                variant="textBase"
                class="font-semibold text-base-800"
              >
                {section.category}
              </Text>
            </div>
            <ul class="flex flex-col divide-y divide-base-200 0">
              {section.details.map((detail, i) => (
                <li class="flex flex-col  gap-4 py-4 text-base-500">
                  <Text tag="p" variant="textSM" class="font-medium">
                    {detail.label}
                  </Text>
                  <div class="flex items-baseline gap-1">
                    <Text
                      tag="p"
                      variant="textSM"
                      class="font-semibold text-base-800"
                    >
                      {detail.price}
                    </Text>
                    <Text
                      tag="p"
                      variant="textXS"
                      class="capitalize text-base-500"
                    >
                      {detail.unit}
                    </Text>
                  </div>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </ul>
  </Wrapper>
</section>
